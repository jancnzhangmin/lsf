  <!--页头 Begin-->
  <div class="g-index-head">
    <div class="top-menu">
      <div>
        <ul class="menu-nav">

        </ul>
        <script type="text/javascript">if (isLogin) {
            $('.menu-nav .is_login').removeClass('hide');
            $('.menu-nav .regis,.menu-nav .login').remove();
            var info = _info_.split(',');
            $("#account").text(info[0]);
            $("#msg-num").text('（' + info[1] + '）');
        }</script>
      </div>
    </div>
    <div class="head">
      <div>
        <div class="logo clearfix">
