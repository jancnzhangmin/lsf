            <%= image_tag 'liushushu_logo_web.png',height:100 %>
          </a></h1>
          <div style="position: absolute;top: 22px;right: 110px;max-width:120px;max-height:50px;overflow:hidden">
          </div>
        </div>

        <div class="nav-link">
          <% if @sites == 'home' %>
          <%= link_to '首页',homes_path,class:'active' %>
              <% else %>
              <%= link_to '首页',homes_path %>
              <% end %>
          <% if @sites == 'info' %>
              <%= link_to '最新资讯',infos_path,class:'active' %>
          <% else %>
              <%= link_to '最新资讯',infos_path %>
          <% end %>
          <% if @sites == 'install' %>
              <%= link_to '工程案例',installs_path,class:'active' %>
          <% else %>
              <%= link_to '工程案例',installs_path %>
          <% end %>
          <% if @sites == 'service' %>
              <%= link_to '用户中心',services_path,class:'active' %>
          <% else %>
              <%= link_to '用户中心',services_path %>
          <% end %>
          <% if @sites == 'active' %>
              <%= link_to '关于我们',actives_path,class:'active' %>
          <% else %>
              <%= link_to '关于我们',actives_path %>
          <% end %>
          <% if @sites == 'about' %>
              <%= link_to '帮助中心',abouts_path,class:'active' %>
          <% else %>
              <%= link_to '帮助中心',abouts_path %>
          <% end %>

        </div>
      </div>
    </div>
